#!/usr/bin/env bash
# of-shell-root: Open an interactive OpenFOAM-enabled shell as root inside a container.
#
# Same as of-shell, but runs as root. Also tries to pass vi-mode via ~/.inputrc if present.

set -euo pipefail

ENGINE="${OPENFOAM_ENGINE:-docker}"
IMAGE="${OPENFOAM_IMAGE:-docker.io/opencfd/openfoam-default}"
TAG="${OPENFOAM_TAG:-2406}"

MOUNTS=(-v "$PWD:$PWD" -w "$PWD")
if [ -f "$HOME/.inputrc" ]; then
  # root's home is /root in the container
  MOUNTS+=(-v "$HOME/.inputrc:/root/.inputrc:ro")
fi

exec "${ENGINE}" run --rm -it \
  --user 0:0 \
  "${MOUNTS[@]}" \
  "${IMAGE}:${TAG}" \
  -- bash -i "$@"

